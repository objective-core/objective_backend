api.objective.camera {
	tls bps@dzen.ws
	encode zstd gzip

	log {
		output file /var/log/caddy/api.objective.camera.log {
			roll_size 10mb
			roll_keep 20
			roll_keep_for 720h
		}
	}

	handle /verify/* {
		reverse_proxy localhost:8002
	}

	handle_path /policy/* {
		root * /root/objective_backend/policy
		file_server
	}

	
	handle {
		reverse_proxy localhost:8000
	}
}

downloads.objective.camera {
	handle_path /policy/* {
		root * /root/objective_backend/policy
		file_server
	}

	log {
		output file /var/log/caddy/downloads.objective.camera {
			roll_size 10mb
			roll_keep 20
			roll_keep_for 720h
		}
	}

	handle_path /apks/* {
		root * /root/objective_backend/apks
		file_server
	}

	handle_path /images/* {
		root * /root/objective_backend/images
		file_server
	}
}

ipfs.objective.camera {
	tls bps@dzen.ws
	encode zstd gzip

	log {
		output file /var/log/caddy/ipfs.objective.camera {
			roll_size 10mb
			roll_keep 20
			roll_keep_for 720h
		}
	}

	handle /thumbnails/* {
		header Cache-Control "public, max-age=604800, must-revalidate"
		reverse_proxy localhost:8001
	}

	handle /api/v0/add {
		method POST
		basicauth {
			App $2b$12$6glpxEGTBysQo10u9l/i0OwO5ykA7gPMO4ohFCqTikz66H.fw..we
		}
		reverse_proxy localhost:8000
	}

	handle /api/* {
		method POST
		basicauth {
			App $2b$12$6glpxEGTBysQo10u9l/i0OwO5ykA7gPMO4ohFCqTikz66H.fw..we
		}
		reverse_proxy localhost:5001
	}

	handle {
		root * /root/videos
		file_server
	}
}
